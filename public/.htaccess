#FIXME: This should be development ONLY
php_flag opcache.enable Off

php_value post_max_size 3M
php_value upload_max_filesize 0M

RewriteEngine On
#TODO: Remove this on production.
RewriteCond %{HTTP_HOST} ^tracker.codeanimu.net$ [NC]
RewriteRule ^favicon\.ico$ favicon.production.ico [NC,QSA]
RewriteCond %{HTTP_HOST} ^test.tracker.codeanimu.net$ [NC]
RewriteRule ^favicon\.ico$  favicon.testing.ico [NC,QSA]
RewriteCond %{HTTP_HOST} ^dev.tracker.codeanimu.net$ [NC]
RewriteRule ^favicon\.ico$ favicon.development.ico [NC,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php/$1 [L]


