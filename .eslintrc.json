{
	"env" : {
		"browser" : true,
		"es6" : true,
		"jquery" : true
	},
	"extends" : "eslint:recommended",
	"parserOptions" : {
		"ecmaVersion" : 2018
	},
	"rules" : {
		"no-console": "off",
		"indentSwitchCase": true,

		"indent" : [
			"error",
			"tab",
			{"SwitchCase" : 1}
		],
		"linebreak-style" : [
			"error",
			"windows"
		],
		"quotes" : [
			"error",
			"single"
		],
		"semi" : [
			"error",
			"always"
		],
		"no-mixed-spaces-and-tabs" : [
			"error",
			"smart-tabs"
		]
	},
	"overrides" : [
		{
			"files" : ["*.user.js"],
			"env" : {
				"browser" : true,
				"greasemonkey" : true
			}
		}
	]
}
